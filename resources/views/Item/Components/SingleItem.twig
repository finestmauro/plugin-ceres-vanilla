{% import "Ceres::Basket.Macros.AddToBasket" as AddToBasket %}

{% set itemData = config("Ceres.item.data") | split(', ') %}
{% set enabledRoutes = config("IO.routing.enabled_routes") | split(', ') %}
{% set shippingCat = config("Ceres.global.shippingCostsCategoryId") %}

<script type="x/template" id="vue-single-item">
    <div>
        <div class="single container-max page-content">
            <div class="row m-t-3">

                <!-- IMAGE CAROUSEL -->
                <slot name="ImageCarousel"></slot>

                <!-- ITEM DETAIL -->
                <div class="col-md-5 single-rightside m-t-1" v-stick-in-parent>
                    <div class="producertag h6 producer text-muted" v-if="currentVariation.filter.hasManufacturer">
                        ${ currentVariation.item.manufacturer.externalName }
                    </div>

                    <h1 class="h2 title">
                        <span>
                            ${ currentVariation | itemName }
                        </span>
                    </h1>

                    {% if ('item.shortDescription' in itemData or 'all' in itemData)%}
                        <p class="single-description" v-if="currentVariation.texts.shortDescription !== ''" v-html="currentVariation.texts.shortDescription"></p>
                    {% endif %}

                    <hr>

                    <div class="m-b-3">
                        <span class="articlenumber small text-muted">
                            <b>{{ trans("Ceres::Template.singleItemNumber") }}</b>
                            <span id="itemId">${ currentVariation.item.id }</span>
                        </span>
                    </div>

                    <slot name="tendenzerWert"></slot>

        	        <div id="tendenzer" class="m-b-3 hidden">
					    <div class="size-marker marker-top"><i class="fa fa-chevron-down"></i></div>
					    <div class="marker-labels">
					        <div class="label-1">fällt klein aus</div>
					        <div class="label-2">fällt normal aus</div>
					        <div class="label-3">fällt groß aus</div>
					    </div>
					    <div class="size-marker marker-bottom"><i class="fa fa-chevron-up"></i></div>
        	        </div>

                    <!-- Variation -->
                    <div class="row m-b-1" v-if="variations.length > 0">
                        <variation-select template="#vue-variation-select" :attributes="attributeNameMap" :variation-units="variationUnits" :variations="variations" :preselect="currentVariation.variation.id" :unitPreselect="currentVariation.variation.unitCombinationId" @is-valid-change="isVariationSelected = $event"></variation-select>
                    </div>
                    <!-- /Variation -->

                    <!-- Item Bundle -->
                        <item-bundle :bundle-type="currentVariation.variation.bundleType" :bundle-components="currentVariation.bundleComponents"></item-bundle>
                    <!-- /Item Bundle -->

                    <slot name="BeforePrice"></slot>

                    <div class="row" v-if="currentVariation.filter.isSalable && variationGroupedProperties.length">
                        <order-property-list></order-property-list>
                    </div>

                    <graduated-prices template="#vue-graduated-prices"></graduated-prices>

                    {% if ('item.recommendedPrice' in itemData or 'all' in itemData) %}
                        <div class="crossprice" v-if="currentVariation.prices.rrp && currentVariation.prices.rrp.price.value > 0 && currentVariation.prices.rrp.price.value > currentVariation.prices.default.price.value">
                            <del class="text-muted small">
                                ${ currentVariation.prices.rrp.price.formatted }
                            </del>
                        </div>
                    {% endif %}

                    <span class="price h1">
                        <span ref="variationTotalPrice" :content="currentVariation.prices.default.price.value">
                            ${ variationTotalPrice | currency(currentVariation.prices.default.currency) }
                        </span>
                        <sup>*</sup>
                        <span :content="currentVariation.prices.default.currency"></span>
                    </span>

                    <slot name="AfterPrice"></slot>

                    <span v-if="currentVariation.variation.availability" :class="'availability tag availability_' + currentVariation.variation.availability.id">
                        <span>
                            ${ currentVariation.variation.availability.names.name }
                        </span>
                    </span>

                    <div class="row m-y-1">
                        <slot name="BeforeAddToBasket"></slot>

                        {{ AddToBasket.printVueComponent(
                            "currentVariation",
                            false,
                            true,
                            {
                                ":missing-order-properties":"variationMissingProperties",
                                ":is-variation-selected": "isVariationSelected && currentVariation.filter.isSalable"
                            }
                        ) }}
                        <slot name="AfterAddToBasket"></slot>
                    </div>

                    <slot name="OutfitButton"></slot>

                    {% if "wish-list" in enabledRoutes or "all" in enabledRoutes %}
                        <div class="row">
                            <add-to-wish-list :variation-id="currentVariation.variation.id"></add-to-wish-list>
                        </div>
                    {% endif %}
                <!-- ./ITEM DETAIL -->

                    <slot name="AdditionalContentAfterAddToBasket"></slot>

                    <hr>

                    <span class="vat small text-muted">
                        * {% if services.customer.showNetPrices() %}{{ trans("Ceres::Template.singleItemExclVAT") }}{% else %}{{ trans("Ceres::Template.singleItemInclVAT") }}{% endif %} {{ trans("Ceres::Template.singleItemExclusive") }}
                        <a {% if shippingCat is not empty %} data-toggle="modal" href="#shippingscosts"{% endif %} title="{{ trans("Ceres::Template.singleItemShippingCosts") }}">{{ trans("Ceres::Template.singleItemShippingCosts") }}</a>
                    </span>

                    <slot name="AdditionalContentAfterVAT"></slot>

                    <div class="text-center">
                        <p class="w-100 m-t-3 m-b-2 h1">
                            <span class="text-double alex">5%</span> <span class="text-large alex">Gutschein geschenkt!</span>
                        </p>
                        <p class="w-100 m-b-3 p-y-1 b-y-s-1 h4 text-uppercase">
                            <a href="/kontakt/newsletter-abonnieren/" onclick="window.open('/kontakt/newsletter-abonnieren/','newwindow','width=760,height=800'); return false;">Gleich den Newsletter abonnieren <i class="fa fa-chevron-right"></i></a>
                        </p>
                    </div>

                </div>

                <!-- ITEM DESCRIPTION -->
                <div class="col-md-7 m-y-3">
                    <ul class="nav nav-tabs" role="tablist">
                        {% if 'item.description' in itemData or 'all' in itemData %}
                            <li class="nav-item" v-if="isDescriptionTabActive">
                                <a class="nav-link active" data-toggle="tab" :href="'#details-' +  currentVariation.variation.id" role="tab">{{ trans("Ceres::Template.singleItemDescription") }}</a>
                            </li>
                        {% endif %}

                        {% if 'item.technical_data' in itemData or 'all' in itemData %}
                            <li class="nav-item" v-if="isTechnicalDataTabActive">
                                <a :class="{ 'active': !isDescriptionTabActive && isTechnicalDataTabActive }" class="nav-link" data-toggle="tab" :href="'#data-' + currentVariation.variation.id" role="tab">{{ trans("Ceres::Template.singleItemTechnicalData") }}</a>
                            </li>
                        {% endif %}

                        <li class="nav-item">
                            <a :class="{ 'active': !isDescriptionTabActive && !isTechnicalDataTabActive }" class="nav-link" data-toggle="tab" href="#assessments-details" role="tab">{{ trans("Ceres::Template.singleItemMoreDetails") }}</a>
                        </li>

                        <slot name="AddDetailTabs"></slot>

                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#our-service" role="tab">Unser Service</a>
                        </li>
                    </ul>

                    <div class="tab-content text-justify">
                        {% if 'item.description' in itemData or 'all' in itemData %}
                            <div class="tab-pane active" :id="'details-' + currentVariation.variation.id" role="tabpanel" v-if="isDescriptionTabActive">
                                <div class="m-y-2" v-html="currentVariation.texts.description">
                                </div>
                            </div>
                        {% endif %}

                        {% if 'item.technical_data' in itemData or 'all' in itemData %}
                            <div :class="{ 'active': !isDescriptionTabActive && isTechnicalDataTabActive }" class="tab-pane" :id="'data-' + currentVariation.variation.id" role="tabpanel" v-if="isTechnicalDataTabActive">
                                <div class="m-y-2" v-html="currentVariation.texts.technicalData">
                                </div>
                            </div>
                        {% endif %}

                        <div :class="{ 'active': !isDescriptionTabActive && !isTechnicalDataTabActive }" class="tab-pane" id="assessments-details" role="tabpanel">
                            <div class="m-y-2">
                                <table class="table table-hover table-sm m-y-0">
                                    <tbody>
                                    {% if 'item.id' in itemData or 'all' in itemData %}
                                        <tr>
                                            <td class="w-50">{{ trans("Ceres::Template.singleItemId") }}</td>
                                            <td class="w-50">${ currentVariation.item.id }</td>
                                        </tr>
                                    {% endif %}

                                    {% if 'item.condition' in itemData or 'all' in itemData %}
                                        <tr v-if="currentVariation.item.condition && currentVariation.item.condition.names.name !== ''">
                                            <td class="w-50">{{ trans("Ceres::Template.singleItemCondition") }}</td>
                                            <td class="w-50">${ currentVariation.item.condition.names.name }</td>
                                        </tr>
                                    {% endif %}

                                    {% if 'item.age_rating' in itemData or 'all' in itemData %}
                                        <tr>
                                            <td class="w-50">{{ trans("Ceres::Template.singleItemAge") }}</td>
                                            <td class="w-50">{{ trans("Ceres::Template.singleItemFSK", {"age": item.documents[0].data.item.ageRestriction }) }}</td>
                                        </tr>
                                    {% endif %}

                                    {% if ('item.external_id' in itemData or 'all' in itemData) %}
                                        <tr v-if="currentVariation.variation.externalId !== ''">
                                            <td class="w-50">{{ trans("Ceres::Template.singleItemExternalVariationId") }}</td>
                                            <td class="w-50">${ currentVariation.variation.externalId }</td>
                                        </tr>
                                    {% endif %}

                                    {% if ('item.variation_model' in itemData or 'all' in itemData) %}
                                        <tr v-if="currentVariation.variation.model !== ''">
                                            <td class="w-50">{{ trans("Ceres::Template.singleItemModel") }}</td>
                                            <td class="w-50">${ currentVariation.variation.model }</td>
                                        </tr>
                                    {% endif %}

                                    {% if 'item.manufacturer' in itemData or 'all' in itemData %}
                                        <tr v-if="currentVariation.filter.hasManufacturer && currentVariation.item.manufacturer.externalName !== ''">
                                            <td class="w-50">{{ trans("Ceres::Template.singleItemManufacturer") }}</td>
                                            <td class="w-50">${ currentVariation.item.manufacturer.externalName }</td>
                                        </tr>
                                    {% endif %}

                                    {% if 'item.producerCountry' in itemData or 'all' in itemData %}
                                        <tr v-if="currentVariation.item.producingCountry && currentVariation.item.producingCountry.names.name !== ''">
                                            <td class="w-50">{{ trans("Ceres::Template.singleItemManufacturingCountry") }}</td>
                                            <td class="w-50">${ currentVariation.item.producingCountry.names.name }</td>
                                        </tr>
                                    {% endif %}

                                    {% if 'item.variationBase_content' in itemData or 'all' in itemData %}
                                        <tr v-if="currentVariation.unit">
                                            <td class="w-50">{{ trans("Ceres::Template.singleItemContent") }}</td>
                                            <td class="w-50">${ currentVariation.unit.content } ${ currentVariation.unit.names.name }</td>
                                        </tr>
                                    {% endif %}

                                    {% if 'item.weightG' in itemData or 'all' in itemData %}
                                        <tr v-if="currentVariation.variation.weightG !== ''">
                                            <td class="w-50">{{ trans("Ceres::Template.singleItemWeight") }}</td>
                                            <td class="w-50">${ currentVariation.variation.weightG } g</td>
                                        </tr>
                                    {% endif %}

                                    {% if 'item.weightNetG' in itemData or 'all' in itemData %}
                                        <tr v-if="currentVariation.variation.weightNetG !== ''">
                                            <td class="w-50">{{ trans("Ceres::Template.singleItemNetWeight") }}</td>
                                            <td class="w-50">${ currentVariation.variation.weightNetG } g</td>
                                        </tr>
                                    {% endif %}

                                    {% if ('item.variation_dimensions' in itemData or 'all' in itemData) %}
                                        <tr>
                                            <td class="w-50">{{ trans("Ceres::Template.singleItemDimensions") }}</td>
                                            <td class="w-50">
                                                <span>${ currentVariation.variation.lengthMM }</span>&times;<!--
                                                --><span>${ currentVariation.variation.widthMM }</span>&times;<!--
                                                --><span>${ currentVariation.variation.heightMM }</span> mm
                                            </td>
                                        </tr>
                                    {% endif %}

                                    {% if ('item.customs_tariff_number' in itemData or 'all' in itemData) %}
                                        <tr v-if="currentVariation.item.customsTariffNumber !== ''">
                                            <td class="w-50">{{ trans("Ceres::Template.singleItemCustomsTariffNumber") }}</td>
                                            <td class="w-50">${ currentVariation.item.customsTariffNumber }</td>
                                        </tr>
                                    {% endif %}
                                    </tbody>
                                </table>
                                <slot name="material"></slot>
                                <slot name="aussenmaterial"></slot>
                                <slot name="innenmaterial"></slot>
                                <slot name="schuerzenmaterial"></slot>
                                <slot name="stil"></slot>
                                <slot name="art"></slot>
                                <slot name="schnitt"></slot>
                                <slot name="laenge"></slot>
                                <slot name="armlaengen"></slot>
                                <slot name="gesamtlaenge"></slot>
                                <slot name="waschanleitung"></slot>
                                <slot name="lieferumfang"></slot>
                                <slot name="verschluss"></slot>
                                <slot name="absatzform"></slot>
                                <slot name="absatzhoehe"></slot>
                            </div>
                        </div>

                        <slot name="AddDetailTabsContent"></slot>

                        <div class="tab-pane" id="our-service" role="tabpanel">
                            <div class="m-y-2">
								<img src="/layout/2018/images/trusted-shops.gif" alt="Trusted Shops Garantie" class="pull-right">
								<ul class="p-l-1">
									<li><i class="fa fa-check"></i> Kauf auf Rechnung</li>
									<li><i class="fa fa-check"></i> 30 Tage Rückgaberecht</li>
									<li><i class="fa fa-check"></i> Schneller Versand mit DHL</li>
									<li><i class="fa fa-check"></i> Bezahlen per Paypal</li>
									<li><i class="fa fa-check"></i> <b>Kostenloser</b> Versand und Rücksendung <small>(DE)</small></li>
									<li><i class="fa fa-check"></i> Hotline: +49 (0)8136 30 49 080</li>
									<li><small>Mo.-Fr. 10:00-18:00 Uhr zu üblichen Festnetzgebühren, Mobilfunk max. 0,42 € / Minute</small></li>
									<li><i class="fa fa-check"></i> E-Mail: <a href="mailto:info@finest-trachten.de?subject=Frage%20zum%20Artikel%20601">info@finest-trachten.de</a></li>
								</ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ./ITEM DESCRIPTION -->

            <div id="shipinfo" class="bg-info m-y-3">
            	<div class="container-max">
            		<div class="row text-center">
            			<div class="col-xs-12">
                            <div class="h3 text-uppercase text-center p-y-2 m-y-0">
            					<i class="fa fa-truck m-r-1 text-large"></i>
            					<strong class="text-primary">90%</strong> aller Bestellungen werden innerhalb von <strong class="text-primary">24 bis 48 Stunden</strong> zugestellt!
            				</div>
            			</div>
            		</div>
            	</div>
            </div>

        	<div id="outfit"  class="row text-center m-b-1">
                <div class="col-xs-12">
                    <slot name="IsOutfit"></slot>
                </div>
        	</div>

        	<div class="row text-center m-b-3">
                <div class="col-xs-12">
        			{% include "Ceres::Containers.Partials.ItemLists.ItemList" with { itemListNo: 2 } %}
                </div>
        	</div>

        	<div id="lastseen"  class="row text-center m-b-1">
                <div class="col-xs-12">
                    <div><div class="h4 p-t-1"><span class="text-double alex">Zuletzt angesehen</span></div></div>
                </div>
        	</div>

        	<div class="row text-center m-b-3">
                <div class="col-xs-12">
        			{% include "Ceres::Containers.Partials.ItemLists.ItemList" with { itemListNo: 2 } %}
                </div>
        	</div>

            {% include "Ceres::Containers.Partials.ItemLists.ItemList" with { itemListNo: 1 } %}

            <slot name="ItemListContainer"></slot>
            <slot name="FeedbackContainer"></slot>
        </div>
    </div>
</script>
